---
import { Toaster } from "react-hot-toast";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="The unofficial API for the 1995 movie, Hackers"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      property="og:image"
      content="https://hackerstheapi.com/hackers-api-image.jpg"
    />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
    <meta name="msapplication-TileColor" content="#da532c" />
    <meta name="theme-color" content="#ffffff" />

    <meta property="og:url" content="https://hackerstheapi.com/" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Hackers, The Unofficial Movie API" />
    <meta
      property="og:description"
      content="The unofficial API for the 1995 movie, Hackers"
    />
    <meta
      property="og:image"
      content="https://hackerstheapi.com/hackers-api-image.jpg"
    />

    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="hackerstheapi.com" />
    <meta property="twitter:url" content="https://hackerstheapi.com/" />
    <meta name="twitter:title" content="Hackers, The Unofficial Movie API" />
    <meta
      name="twitter:description"
      content="The unofficial API for the 1995 movie, Hackers"
    />
    <meta
      name="twitter:image"
      content="https://hackerstheapi.com/hackers-api-image.jpg"
    />
    <!-- Meta Tags Generated via https://www.opengraph.xyz -->
    <title>{title}</title>
  </head>
  <body>
    <Toaster
      client:idle
      toastOptions={{
        style: {
          fontSize: "0.85rem",
        },
      }}
    />
    <slot />
  </body>
</html>
<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
  }

  .api-code {
    background: #000;
    border-radius: 5px;
    color: #40916c;
    padding: 0.25rem;
    margin-right: 0.25rem;
  }
</style>
